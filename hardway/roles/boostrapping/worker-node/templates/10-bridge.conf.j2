{
    "cniVersion": "0.3.1",
    "name": "bridge",
    "type": "bridge",
    "bridge": "cnio0",
    "isGateway": true,
    "ipMasq": true,
    "ipam": {
        "type": "host-local",
        "ranges": [ 
        {% for host in groups['kube-node'] %}{% if inventory_hostname == host %}[{"subnet": "{{ POD_CIDR_PREFIX }}.{{ loop.index }}.0/24"}]
        {% endif %}{% endfor %}
        ],
        "routes": [{"dst": "0.0.0.0/0"}]
    }
}